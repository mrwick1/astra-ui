{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Default",
  "compilerOptions": {
    "jsx": "react-jsx",
    "lib": ["dom", "ES2020"],
    "module": "ESNext",
    "target": "ES2020",
    "rootDir": "src",
    "outDir": "dist",
    "composite": false,
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "inlineSources": false,
    "isolatedModules": true,
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "preserveWatchOutput": true,
    "skipLibCheck": true,
    "strict": true,
    "paths": {
      "@components/*": ["./src/components/*"],
      "@icons/*": ["./src/icons/*"],
      "@theme/*": ["./src/theme/*"],
      "@utils/*": ["./src/utils/*"],
      "@hooks/*": ["./src/hooks/*"],
      "@types": ["./src/types"],
      "@animations/*": ["./src/animations/*"],
      "@helpers/*": ["./src/helpers/*"]
    }
  },
  "exclude": ["node_modules"]
}
